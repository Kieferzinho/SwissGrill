---
const { color = "yellow-gold", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "yellow" | "yellow-gold" | "black" | "white";
	title?: string;
}

const colors = {
	yellow: "bg-yellow-bright/10 text-yellow-bright ring-1 ring-yellow-bright",
	"yellow-gold": "bg-yellow-gold/10 text-yellow-gold ring-1 ring-yellow-gold",
	black: "bg-gray-dark/10 text-gray-light ring-1 ring-gray-dark/50",
	white: "bg-white/10 text-white ring-1 ring-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-base font-semibold ${colors[color]}`}
	>{title}</span
>
